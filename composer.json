{
    "name": "rolocost/dynosendphp",
    "description": "PHP API wrapper for Dynosend customer engagement platform",
    "require": {
        "php": ">=5.6.4 || ^7.0 || ^8.0",  // Supports PHP 5.6.4 and above
        "guzzlehttp/guzzle": "^6.0 || ^7.0" // Supports Guzzle 6 and 7
    },
    "autoload": {
        "psr-4": {
            "DynosendSDK\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0 || ^6.0 || ^7.0 || ^8.0 || ^9.0" // Supports PHPUnit 5 and above
    }
}
